---
layout: none
permalink: /feed.xml
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/">
  <title>{{ site.title | xml_escape }}</title>
  <link href="{{ site.url }}/feed.xml" rel="self"/>
  <link href="{{ site.url }}"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}/</id>

  {% for post in site.posts %}
    <entry>
      <title>{{ post.title | xml_escape }}</title>
      <link href="{{ site.url }}{{ post.url }}" />
      <id>{{ site.url }}{{ post.url }}</id>
      <updated>{{ post.date | date_to_xmlschema }}</updated>

      <author>
        <name>{{ post.author | default: site.author.name | xml_escape }}</name>
      </author>

      <summary>
        {{ post.description | default: post.excerpt | strip_html | truncate: 160 | xml_escape }}
      </summary>

      {% if post.image %}
        <media:thumbnail url="{{ site.url }}/{{ post.image }}" />
      {% endif %}

      <content type="html">
        <![CDATA[
          {% if post.image %}
            <p><img src="{{ site.url }}/{{ post.image }}" alt="Coverbild zu {{ post.title }}" /></p>
          {% endif %}
          {{ post.excerpt | markdownify }}
        ]]>
      </content>
    </entry>
  {% endfor %}
</feed>
